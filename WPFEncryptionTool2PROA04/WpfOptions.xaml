<Window x:Class="WPFEncryptionTool2PROA04.WpfOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="WpfOptions" Height="480" Width="640">
    <StackPanel Margin="10" HorizontalAlignment="Left">
        <Label Content="Options - Folders" FontSize="26" FontWeight="Bold" />
        <StackPanel Margin="10" HorizontalAlignment="Left" x:Name="FolderStack">
            <!--FolderPanels are generated in code -->            
        </StackPanel>
        <WrapPanel  Margin="0,50,0,0" HorizontalAlignment="Right" >
            <Button x:Name="BtnCancel" Content="Cancel" Width="85"  Padding="0,5" Margin="10,10" Click="BtnCancel_Click" />
            <Button x:Name="BtnSave" Content="Save" Width="85" Padding="0,5" Margin="10,10" Click="BtnSave_Click" />
        </WrapPanel>
    </StackPanel>
</Window>
